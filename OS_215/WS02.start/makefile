CC=gcc -Wall
BIN=bin
INC=include
LIB=lib
OBJ=obj
SRC=src

Q1: ${SRC}/1.c
	${CC} -o ${OBJ}/1.o $^
	@echo "##################################################"
	@${OBJ}/1.o
	@echo "##################################################"

Q2: ${SRC}/2.c
	${CC} -o ${OBJ}/2.o $^
	@echo "##################################################"
	@${OBJ}/2.o
	@echo "##################################################"

Q3: ${SRC}/3.c
	${CC} -o ${OBJ}/3.o $^
	@echo "##################################################"
	@${OBJ}/3.o USD 256
	@echo "##################################################"

clean:
	rm -f ${LIB}/* ${OBJ}/* ${BIN}/*
